<div class="relative rounded-xl overflow-x-auto shadow-md sm:rounded-lg w-auto">
  <table class="min-w-full">
    <thead class="bg-gray-50">
      <tr>
        <th class="py-4">Dog</th>
        <th class="py-4">Rating</th>
        <th class="py-4">Longest Absence</th>
        <th class="py-4">Started At</th>
        <th class="py-4">Completed At</th>
        <th class="py-4">Steps</th>
      </tr>
    </thead>
  <% @training_sessions.each do |ts| %>
    <tr class="odd:bg-white even:bg-gray-50">
      <td class="p-4"><%= ts.dog.name %></td>
      <td class="p-4"><%= ts.rating %></td>
      <td class="p-4"><%= ts.longest_absence %></td>
      <td class="p-4"><%= ts.started_at %></td>
      <td class="p-4"><%= ts.completed_at %></td>
      <td class="p-4">
        <ul>
        <% ts.training_steps.collect do |tst| %>
          <li><%= tst.description %></li>
        <% end %>
        </ul>
      </td>
    </tr>
  <% end %>
  </table>
</div>
